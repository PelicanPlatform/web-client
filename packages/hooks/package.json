{
  "name": "@pelicanplatform/hooks",
  "version": "1.0.1",
  "homepage": "https://pelicanplatform.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PelicanPlatform/web-client.git"
  },
  "description": "Pelican React Hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage --json --outputFile=.github/tests/test-summary.json",
    "build": "tsc --project ./tsconfig.json",
    "prepublish": "pnpm run build"
  },
  "exports": {
    ".": {
      "import": {
        "development": "./src/index.ts",
        "default": "./dist/index.js"
      },
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/*",
    "README.md",
    "package.json"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@pelicanplatform/web-client": "workspace:*"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5"
  }
}
